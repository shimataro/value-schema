{
  "verbose": true,
  "moduleDirectories": [
    "node_modules",
    "src"
  ],
  "moduleNameMapper": {
    "^value-schema$": "<rootDir>/src/index"
  },
  "testEnvironment": "node",
  "testMatch": [
    "<rootDir>/test/**/*.test.ts"
  ],
  "transform": {
    "\\.ts$": [
      "ts-jest", {
        "tsconfig": "tsconfig.test.json"
      }
    ]
  },
  "collectCoverage": true,
  "coverageDirectory": "./coverage/"
}
